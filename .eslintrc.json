{
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-console": "warn",
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "semi": ["error", "never"]
  }
}